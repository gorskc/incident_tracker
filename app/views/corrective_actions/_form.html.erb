<%= render 'shared/errors', object: @corrective_action %>

<%= form_for ([@incident, @corrective_action]) do |f| %>
    <div class="field" >
        <%= f.label :action %><br>
        <%= f.text_field :action %>
    </div>
    <div class= "field" >
        <%= f.label :expected_completion_date %><br>
        <%= f.date_field :expected_completion_date %>
    </div>
    <div class= "field" >
        <%= f.label :actual_completion_date %><br>
        <%= f.date_field :actual_completion_date %>
    </div>
    <div class= "field" >
        <%= f.label :complete %><br>
        <%= f.check_box :complete, {}, "true", "false" %>
    </div>
    <div class= "actions" >
        <%= f.submit %>
    </div>
<% end %>