<h1>Injuries for <%= @incident.date_of_incident %></h1>

<table role="grid">
  <thead>
    <tr>
      <th>Injury Type</th>
      <th>Affected Body Part</th>
      <th>Treatment</th>
    </tr>
  </thead>
  <tbody>
    <% @injuries.each do |injury| %>
      <tr>
        <td><%= injury.injury_type %></td>
        <td><%= injury.affected_body_part %></td>
        <td><%= injury.treatment %></td>
      </tr>
    <% end %>
  </tbody>
</table>