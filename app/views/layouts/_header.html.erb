                    <li>
                        <a href="#">Incidents</a>
                        <ul class="menu">
                            <li><%= link_to 'View incidents', incidents_path %></li>
                            <li><%= link_to 'New incident', new_incident_path %></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#">Users</a>
                        <ul class="menu">
                            <li><%= link_to 'View users', users_path %></li>
